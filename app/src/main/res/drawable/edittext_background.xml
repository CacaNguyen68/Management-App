<!-- res/drawable/edittext_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
  android:shape="rectangle">

  <!-- Border -->
  <stroke
    android:width="2dp"
    android:color="#FFFFFF" />

  <!-- Background color -->
  <solid
    android:color="#44000000" /> <!-- Màu nền với độ mờ (alpha) -->

  <!-- Rounded corners -->
  <corners
    android:radius="8dp" /> <!-- Độ cong viền -->

  <!-- Padding -->
  <padding
    android:left="8dp"
    android:right="8dp"
    android:top="8dp"
    android:bottom="8dp" /> <!-- Khoảng cách nội bộ từ viền đến văn bản -->

</shape>
